<div class="container">
  <h1>Create a New Movie</h1>
  <a href="/movies">Go to All Movies</a>
  <hr>
  <form class="well">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" placeholder="Movie Title">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="director">Director</label>
          <input type="text" class="form-control" id="director" placeholder="Director">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="year">Year</label>
          <input type="number" value="1990" class="form-control" id="year" placeholder="Year">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="rating">My Rating</label>
          <input type="number" value="0" min="0" max="5" class="form-control" id="rating" placeholder="My Rating">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="poster-url">Poster URL</label>
          <input type="text" class="form-control" id="poster-url" placeholder="Poster URL">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
